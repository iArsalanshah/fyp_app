<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorThemeBackground"
    tools:context="project.com.fyp.layouts.signup_pages.signupOption">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Signup as Passenger"
        android:background="@drawable/style_rounded"
        android:id="@+id/btnSignupPassengerOption"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:id="@+id/textView5" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Signup as Driver"
        android:layout_marginTop="20dp"
        android:background="@drawable/style_rounded"
        android:id="@+id/btnSignupDriverOption"
        android:textAllCaps="false" />

</LinearLayout>
