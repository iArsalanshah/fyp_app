<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="project.com.fyp.layouts.signup_pages.signupFormDriver">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:text="Sign Up!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/textView3"
            android:layout_alignRight="@id/textView3"
            android:layout_below="@id/textView3"
            android:text="with E-Travel"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorThemeYellow" />
        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_below="@id/textView4"
            android:layout_height="wrap_content"
            android:id="@+id/scrollViewDriv">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/second"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextUsernameDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:hint="  Username"
                android:singleLine="true" />

            <EditText
                android:id="@+id/editTextemailDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_below="@id/editTextUsernameDriver"
                android:layout_marginTop="30dp"
                android:hint="  Email"
                android:singleLine="true" />

            <EditText
                android:id="@+id/editTextpwdDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_below="@id/editTextemailDriver"
                android:layout_marginTop="30dp"
                android:hint="  Password"
                android:singleLine="true" />

            <EditText
                android:id="@+id/editTextRepwdDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_below="@id/editTextpwdDriver"
                android:layout_marginTop="30dp"
                android:hint="  Repassword"
                android:singleLine="true" />

            <EditText
                android:id="@+id/editTextcellNumberDriv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_below="@id/editTextRepwdDriver"
                android:layout_marginTop="30dp"
                android:hint="  Cell Number"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spinnerTown"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_below="@id/editTextcellNumberDriv"
                android:layout_marginTop="40dp" />

            <Spinner
                android:id="@+id/spinnerUC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_below="@id/spinnerTown"
                android:layout_marginTop="40dp" />

            <Button
                android:id="@+id/btnSignUpFormDriver"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_below="@id/spinnerUC"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/style_rounded"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="25sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSignUpFormDriver"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:id="@+id/linearLayout">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Town for Stand Area:"
                android:id="@+id/textView6"
                android:layout_below="@id/editTextcellNumberDriv"
                android:layout_toRightOf="@id/linearLayout"
                android:layout_toEndOf="@id/linearLayout"
                android:textSize="16sp"
                android:textColor="@color/colorThemeYellow"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select UC for Stand Area:"
                android:textColor="@color/colorThemeYellow"
                android:id="@+id/textView7"
                android:layout_below="@id/spinnerTown"
                android:layout_toRightOf="@id/linearLayout"
                android:layout_toEndOf="@id/linearLayout"
                android:textSize="16sp"
                android:layout_marginTop="15dp" />
        </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
